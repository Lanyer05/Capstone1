<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#70D1F3E3" /> <!-- This color determines the glass background with 50% opacity -->
        </shape>
    </item>
    <item android:right="8dp" android:left="8dp" android:top="8dp" android:bottom="8dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <corners android:radius="15dp" /> <!-- Adjust the radius as needed to match your card's corner radius -->
        </shape>
    </item>
</layer-list>
